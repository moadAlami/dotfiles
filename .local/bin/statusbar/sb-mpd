#!/usr/bin/sh

case $BLOCK_BUTTON in
	1) mpc toggle &> /dev/null ;;
	4) mpc next &> /dev/null ;;
	5) mpc prev &> /dev/null ;;
esac

if [[ "$(mpc | wc -l)" == 3 ]];then if mpc | grep playing >/dev/null;then
		icon=''
	else 
		icon=" ‚è∏"
	fi

	echo " $(ncmpcpp -q --current-song='{{%a - }%t}|{%f}')$icon"
fi
